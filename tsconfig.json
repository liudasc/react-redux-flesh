{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"sourceMap": true,
		"removeComments": true,
		"jsx" : "react",
		"lib": ["dom", "es5", "es2015.core", "es2015.promise"],
		"skipLibCheck": true,
		"skipDefaultLibCheck": true,
		"noImplicitAny": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"strictNullChecks": true,
		"types": [
			"mocha"
		]
	},
	"exclude": [
		"node_modules"
	]
}
